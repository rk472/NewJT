<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jt.javatechnocrat.ProjectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/project_subject_list"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext_stroke_normal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Click here to change the stream of projects"
            android:textSize="11dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="3dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Projects"
            android:textSize="20dp"
            android:padding="10dp"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="5dp"
            android:textAlignment="center"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/project_list"/>
    </LinearLayout>

</FrameLayout>
